<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditMenu">

    <EditText
        android:id="@+id/etNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama" />

    <EditText
        android:id="@+id/etHargaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Harga" />

    <EditText
        android:id="@+id/etGambarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Gambar" />

    <Spinner
        android:id="@+id/etKategoriMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/options_array"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/saveEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Edit"/>
</LinearLayout>