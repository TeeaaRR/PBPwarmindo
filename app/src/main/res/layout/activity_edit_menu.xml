<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".EditMenu">

    <TextView
        android:id="@+id/judulHalaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Menu"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etNamaMenu"
        android:layout_width="match_parent"
        android:hint="Masukkan Nama Menu"
        android:inputType="text"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_below="@id/judulHalaman"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etHargaMenu"
        android:layout_width="match_parent"
        android:hint="Masukkan Harga"
        android:inputType="text"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_below="@id/etNamaMenu"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/ivGambarMenu"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/placeholder_image"
        android:layout_below="@id/etHargaMenu"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/labelKategori"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/kategoriMenu"
        android:layout_below="@id/etHargaMenu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:text="Kategori Menu"/>

    <Spinner
        android:id="@+id/etKategoriMenu"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:entries="@array/options_array"
        android:layout_below="@id/labelKategori"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/labelWarung"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/idWarungMenu"
        android:layout_below="@id/etKategoriMenu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:text="Pilih Warung"/>

    <Spinner
        android:id="@+id/idWarungEditMenu"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/labelWarung"/>

    <Button
        android:id="@+id/btnGambarMenu"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/idWarungEditMenu"
        android:text="Upload Gambar"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/saveEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivGambarMenu"
        android:layout_marginTop="25dp"
        android:text="Save Edit"/>

    <Button
        android:id="@+id/batalEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveEdit"
        android:layout_marginTop="15dp"
        android:text="Cancel Edit"/>
</RelativeLayout>