<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Warung"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edIdWarung"
        android:layout_width="match_parent"
        android:hint="Masukkan Id Warung"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_marginTop="55dp"/>

    <EditText
        android:id="@+id/edNamaWarung"
        android:layout_width="match_parent"
        android:hint="Masukkan Nama Warung"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_marginTop="120dp"/>

    <ImageView
        android:id="@+id/previewGambar"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/edNamaWarung"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:id="@+id/preview"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:layout_below="@id/previewGambar">
s
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/previewLogo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/baseline_circle_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/previewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/previewLogo"
            android:layout_alignTop="@+id/previewLogo"/>

        <TextView
            android:id="@+id/previewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/previewLogo"
            android:layout_alignTop="@+id/previewLogo"
            android:layout_below="@+id/previewNama"
            android:layout_marginTop="18dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnUploadLogo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview"
        android:layout_marginTop="10dp"
        android:text="Upload Logo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:layout_below="@id/preview"
        android:layout_toEndOf="@id/btnUploadLogo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnUploadLogo"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnAdd"
        android:gravity="center"/>

</RelativeLayout>