<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Warung"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edIdWarung"
        android:layout_width="match_parent"
        android:hint="Masukkan Id Warung"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_marginTop="55dp"/>

    <EditText
        android:id="@+id/edNamaWarung"
        android:layout_width="match_parent"
        android:hint="Masukkan Nama Warung"
        android:layout_height="45dp"
        android:background="@drawable/outline_square_24"
        android:drawableStart="@drawable/outline_store_mall_directory_24"
        android:drawablePadding="10dp"
        android:drawableTint="#98592A"
        android:padding="10dp"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/btnUploadLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Logo"
        android:textAllCaps="false"
        android:layout_marginTop="180dp"/>

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:layout_marginTop="230dp"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambahkan"
        android:textAllCaps="false"
        android:layout_marginTop="290dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Data"
        android:textAllCaps="false"
        android:layout_marginTop="350dp"
        android:gravity="center"/>

</RelativeLayout>